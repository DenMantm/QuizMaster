<!DOCTYPE html>

<head>
    <% include ./partials/head %>
        <script src="../js/questions.js"></script>
        <link href="/scripts/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.css" rel="stylesheet">
        <script src="/scripts/bootstrap-switch/dist/js/bootstrap-switch.js"></script>
</head>

<body class="container">


    <header>
        <% include ./index_partials/navbar %>
    </header>

    <main>
  <div class="modal fade" id="addQuestion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Add new question</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <label htmlFor="inputName" class="col-sm-2" control-label>Question</label>
            <div class="col-sm-10">
              <input type="text" id="newQuestion" class="form-control" placeholder="Question" required/>
            </div>
          </div>
          <div class="row">
            <label htmlFor="inputName" class="col-sm-2" control-label>Answer 1:</label>
            <div class="col-sm-10">
              <input type="text" id="answer1" class="form-control" placeholder="Answer" required/>
              <div class="cb_correct1">
                <label>
                    <input type="checkbox" value="false" id="cb_correct1" name="cb_correct1"> Correct
                </label>
            </div>
            </div>
          </div>
          <div class="row">
            <label htmlFor="inputName" class="col-sm-2" control-label>Answer 2:</label>
            <div class="col-sm-10">
              <input type="text" id="answer2" class="form-control" placeholder="Answer" required/>
            <div class="cb_correct1">
                <label>
                    <input type="checkbox" value="false" id="cb_correct2" name="cb_correct2"> Correct
                </label>
                </div>
            </div>
          </div>
        <div id="new3"></div>
        <button id="btnAddAnswer" class="btn btn-primary">Add another answer</button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="btnAddQuestion" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

        <a class="btn icon-btn btn-info" id="btn_edit" data-toggle="modal" data-target="#addmanager">
            <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-info"></span>
            New question
        </a>
        
        <button type="button" class="btn btn-default btn-lg btn-block" data-toggle="modal" data-target="#addQuestion">
            <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-info"></span>
            Add question
          </button>
    </main>

    <footer>
        <% include ./partials/footer %>
    </footer>
    <script>
        $(function(argument) {
            $('[type="checkbox"]').bootstrapSwitch();
        })
    </script>
</body>

</html>