<!DOCTYPE html>

<head>
    <% include ./index_partials/head %>
        <script src="../js/newquiz.js"></script>
        <link href="/scripts/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.css" rel="stylesheet">
        <script src="/scripts/bootstrap-switch/dist/js/bootstrap-switch.js"></script>
</head>

<body>


        <% include ./index_partials/navbar %>
<div class="main_body_background">
<div class="mainContainer container">
    <main class="topPadding">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <div class="progress">
                        <div class="progress-bar progress-bar-success" aria-valuemin="0" aria-valuemax="100" id="progress">
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                </div>
            </div>
  
            
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <form role="form" action="newquiz" method="post" id="newquiz">

                        <!-- STEP1 QUIZ NAME -->

                        <div class="form-group" id="step1">
                            <label for="qName">
                                Step 1: Choose your quiz name
                            </label>
               <!-- <p> <img style="margin:auto;max-height:30%;max-width:30%" alt="User Pic" src= '/getProgilePic'class="img-responsive">-->
               <!--<input style="margin-left:40%" id='enableSavePicture' value='Change' data-original-title="Change Picture" data-toggle="tooltip" class="btn btn-sm btn-warning"></input> </p>-->
            
                            
                            <input class="form-control" id="qName" name="qName" placeholder="Quiz name"/>
                            <!--<button type="button" class="btn btn-danger" id="check">CHECK</button>-->
                        </div>

                        <!-- STEP2 QUIZ DESCRIPTION -->
                        
                        <div class="form-group" id="step2">
                            <label for="qDescription">
                                Step 2: Please provide a short description of your quizz (optional)
                            </label>
                            <textarea class="form-control" rows="3" id="qDescription" name="qDescription"></textarea>
                        </div>

                        <!-- STEP3 NUMBER OF QUESTIONS-->

                        <div class="form-group" id="step3">
                            <label for="qNumber">
                                Step 3: Please select if you would like to display all available questions each time or choose a number of questions to display.
                            </label>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="true" name="cb_qNumber"> Display all available questions
                                </label>
                                <div id="qNumber_field">
                                    <br/>
                                    How many qestions you would like to display when a quiz is taken?
                                    <input class="form-control" id="qNumber" name="qNumber" />
                                </div>
                            </div>
                        </div>

                        <!-- STEP4 RANDOM ORDER QUESTIONS -->
                        <div class="form-group" id="step4">
                            <label for="shuffleQuestion">
                                Step 4: Display questions in random order.
                            </label>
                            <div class="cb_shuffleQuestion">
                                <label>
                                    <input type="checkbox" value="false" id="cb_shuffleQuestion" name="cb_shuffleQuestion"> Display questions in random order
                                    <input class="form-control" id="shuffleQuestion" name="shuffleQuestion" type="hidden"/>
                                </label>
                            </div>
                        </div>


                        <!-- STEP5 RANDOM ORDER ANSWERS -->
                        <div class="form-group" id="step5">
                            <label for="shuffleAnswers">
                                Step 5: Tick the box if you would like to display an answers in the random order. Please bear in mind that if you select this option you should avoid answers like "all above" or "none of the above".
                            </label>
                            <div class="cb_shuffleAnswers">
                                <label>
                                    <input type="checkbox" value="false" id="cb_shuffleAnswers" name="cb_shuffleAnswers"> Display answers in random order
                                    <input class="form-control" id="shuffleAnswers" name="shuffleAnswers" type="hidden"/>
                                </label>
                            </div>
                        </div>

                        <!-- STEP6 DESIGN -->
                        <div class="form-group" id="step6">
                            <label for="design">
                                Step 6: Choose if the time for answer should be limited.
                            </label>
                            <div class="cd_timeLimit">
                                <label>
                                    <input type="checkbox" value="false" id="cb_timeLimit" name="cb_timeLimit"> Limit time for the answers.
                                    <input class="form-control" id="timeLimit" name="timeLimit" type="hidden"/>
                                </label>
                            </div>
                            <div id="timeLimit_field" style="display: none;">
                                <br/>
                                Time in seconds per answer:
                            <input class="form-control" id="timeLimitVal" name="timeLimitVal"/>
                        </div>
                        </div>
                        
                    <div id="alert">
                    </div>
                        <button type="button" class="btn btn-danger" id="back">Back</button>
                        <button type="button" class="btn btn-success" id="next">Next</button>
                        <button type="submit" class="btn btn-default" id="submit">Submit</button>
                    </form>
                </div>
                <div class="col-md-2">
                </div>
            </div>
        </div>
    </main>
    </div>
</div>
    <footer>
        <% include ./index_partials/footer %>
    </footer>
    <script>
        $(function(argument) {
            $('[type="checkbox"]').bootstrapSwitch();
        })
    </script>
    
    

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
</body>

</html>